{% if paginate.pages > 1 %}
  <div class="twelve columns section clearfix">
  <div class="paginate paginate_top">
  
    {% if paginate.previous %}
    <span class="prev">{{ '<' | link_to: paginate.previous.url }}</span>
    {% else %}
      <span class="prev disabled"><a href="#" onclick="return false;">{{ '<'}}</a></span>
    {% endif %}
    
    {% for part in paginate.parts %}
      {% if part.is_link %}
        <span>{{ part.title | link_to: part.url }}</span>
      {% else %}
        {% if part.title == '&hellip;' %}
        <span class="ellipsis"><a href="#" onclick="return false;">{{ part.title }}</a></span>
        {% else %}
        <span class="current">{{ part.title | link_to: part.url }}</span>
        {% endif %}
      {% endif %}
    {% endfor %}     

    {% if paginate.next %}
      <span class="next">{{ '>' | link_to: paginate.next.url }}</span>
    {% else %}
      <span class="next disabled"><a href="#" onclick="return false;">{{ '>'}}</a></span>
    {% endif %}    
  
  <p class="paginate_num_showing paginate_num_showing_top">
  {{ 'layout.pagination.numbering' | t }} {{ paginate.current_offset | plus: 1 }} - {% if paginate.next %}{{ paginate.current_offset | plus: paginate.page_size }}{% else %}{{ paginate.items }}{% endif %} {{ 'layout.pagination.numbering_of' | t }} {{ paginate.items }}
  </p>
  </div>
  </div>
{% endif %}
