/*Color*/
.header-top-nav,
.nav ul li a.top-link::after, .nav ul li a.active::after,
.description h4  /*Description*/
{
  background-color:#E67E22;
}


/*Font Color*/
.product-category li:hover > a,
.header .search-submit,
.header_bar .nav-container a, .header_bar .nav-container a:visited,
.nav a, .nav a:visited, .nav a:active, .nav a.icon-cart span, .search-close,
.description h3
{
  color:#E67E22;
}
/*Border Color*/
.header-search-bar input:hover,.header-search-bar input{
  border-color:#E67E22;
}
.description h3{
  background: #fffcfb;
  border-bottom-color: #E67E22;
}

/*Logo*/
.logo {
  height:60px;
  background-image: url({{ 'logo-service.png' | asset_url }});
  background-size: auto 60px;
  background-repeat:no-repeat;
  background-position: 0 0;
}  



